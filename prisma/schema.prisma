generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Method {
  ONLINE
  EMAIL
  REFERRAL
}

enum Status {
  APPLIED
  INTERVIEWING
  REJECTED
  OFFERED
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Jobapply {
  id       Int      @id @default(autoincrement())
  company  String
  position String
  date     DateTime
  method   Method   @default(ONLINE)
  status   Status   @default(APPLIED)
}
